pipeline {
    agent any

    environment {
        ENVIRONMENT = 'dev'
        DOCKER_IMAGE = 'your-docker-image:latest'
        DOCKER_USER_NAME = "trinhhongthuc57@gmail.com"
        DOCKER_PASSWORD = "Trinhhongthuc1999."
    }

    stages {
        stage('Clone Code to GitHub'){
            steps {
                echo "Cloning the code to GitHub"
                git url: "https://github.com/trinhhongthuc/build-reactjs-jenkin", branch: "master"
            }
        }

        stage ('Build') {
            steps{
                echo "Building the Docker Images"
                sh "docker build -t todo-list-app ."
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo "Pushing the Docker image to Docker Hub"
                withCredentials([usernamePassword(credentialId: "thuctrinh-demo", passwordVariable: "123456", userNameVariable: "thuctrinh")]) {
                    sh "docker tag todo-list ${env.dockerHubUser}/todo-list-app:latest "
                    sh "docker login -u ${env.DOCKER_USER_NAME} -p ${ENV.DOCKER_PASSWORD}"
                    sh "docker push ${env.dockerHubUser}/todo-list-app:latest"
                }
            }
        }

        stage("Deploy") {
            steps {
                echo "Deploying the container"
                sh "docker compose down && docker compose up -d"
            }
        }
    }
}
